    <script>
      $(function () {
        var socket = io();
        socket.on('chat message', function (msg) {
          const jsonMsg = JSON.parse(msg)
          if (jsonMsg.to === "<%= userName %>" || jsonMsg.from === "<%= userName %>") {
            var answer = confirm ("You have a chat request from " + jsonMsg.from + ", would you like to connect?")
            if(answer){
            window.location.href = "/chat?userName=<%= userName %>&chatwith=" + jsonMsg.from + "&firstMsg=" + jsonMsg.msg
          }
          }
        });
      });
    </script>
